mixin sCheckout(data)
	// start sCheckout
	+b.sCheckout.section#sCheckout&attributes(attributes)
		+e.main-row.row
			.col-lg-8
				+personalData('Контакты')
				+e.delivery
					+e.title.h4 Доставка 
					+in-c('radio', 'Самовывоз', 'delivery')
					+in-c('radio', 'Доставка по адресу', 'delivery')
				+e.row.row
					.col-md-6
						+deliveryAddresses-item('Дом', 'г. Ханты-Мансийск,<br>ул. Садовая, д. 14 корп. 52, кв. 12').active
					.col-md-6
						+deliveryAddresses-item('Работа', 'г. Ханты-Мансийск,<br>ул. Парковых работников, д. 14 корп. 52, кв. 12')
				+e.link(href="#add-ardress").link-modal-js
					span + Добавить новый адрес
				+e.checkbox-wrap
					+in-c('checkbox')
						p Бесконтактная доставка
						p Действует только при оплате онлайн
				+e.delivery-time
					+in-c('radio', 'Ближайшая', 'time-delivery')
					+in-c('radio', 'Отложенная доставка', 'time-delivery')
				+e.radio-wrap
					+in-c('radio', '08:00', 'time')
					+in-c('radio', '08:30', 'time')
					+in-c('radio', '09:00', 'time')
					+in-c('radio', '09:30', 'time')
					+in-c('radio', '10:00', 'time')
					+in-c('radio', '11:30', 'time')
					+in-c('radio', '12:00', 'time')
					+in-c('radio', '12:30', 'time')
					+in-c('radio', '13:00', 'time')
					+in-c('radio', '13:30', 'time')
					+in-c('radio', '14:00', 'time')(disabled)
					+in-c('radio', '14:30', 'time')(disabled)
					+in-c('radio', '15:00', 'time')(disabled)
					+in-c('radio', '15:30', 'time')
					+in-c('radio', '16:00', 'time')
					+in-c('radio', '16:30', 'time')
					+in-c('radio', '17:00', 'time')
					+in-c('radio', '17:30', 'time')
					+in-c('radio', '18:00', 'time')
					+in-c('radio', '18:30', 'time')
