					+in-c('radio', '22:30', 'time')(disabled)
					+in-c('radio', '23:00', 'time')(disabled)
					+in-c('radio', '23:30', 'time')(disabled)
			+e.col.col-lg-3
				+e.your-order.sBasket
					.h4 Ваш заказ
					+e.order-wrap
						+e.order-item
							h6 Длинное название продукции в одну строку или две
							+e.weight Вес: 485 г.
							+e.cost 2 490 
								span ₽
						+e.order-item
							h6 Burger мистер Трюфель x 10
							+e.weight Вес: 485 г.
							+e.cost 2 490 ₽
						+e.order-item
							h6 Burger мистер Трюфель x 10
							+e.weight Вес: 485 г.
							+e.cost 2 490 ₽
						+e.order-item
							h6 Длинное название продукции в одну строку или две
							+e.weight Вес: 485 г.
							+e.cost 2 490 ₽
					table
						tbody
							tr
								td.text-secondary
									small Сумма
								td
									small.strong 2 750 ₽
							tr
								td.text-secondary
									small Скидка 10% (PROMOKOD)
								td
									small.strong 245 ₽ 
							tr
								td.h4.strong Итого 
								td.h4.strong 2 490 ₽
					button.btn.btn-accent.w-100 Оформить заказ

					
