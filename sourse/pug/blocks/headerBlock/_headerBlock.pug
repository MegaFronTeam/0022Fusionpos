mixin headerBlock()
	// start headerBlock
	+b.headerBlock.section#headerBlock&attributes(attributes)
		.container.text-center
			.row
				.col-xl-9
					+e.slider--js.swiper-container
						.swiper-wrapper 
							- for (var x = 0; x < 3; x++)
								+e.slide.swiper-slide 
									+e.img-wrap(href="#")
										+pic("main-banner.png") 
						.swiper-pagination
				.col
					.row 
						.col-xl-12.col-sm-auto
							+e.img-wrap(href="#")
								+pic("ban-1.png",'','')
						.col-xl-12.col-sm-auto
							+e.img-wrap--shipping
								+pic("ban-2.png",'','')

						
	// end headerBlock