extends layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sCatalog/_sCatalog.pug

block variables
	- let  mainPage= null 
	- let  bg= null

block title
	- let  title= 'title'
	title= title
block pagecontent

	+mob-mnu()
	+top-nav()
	.section.container
		.row
			mixin btn(id, name)
				.col-auto.mb-2
					a.btn.btn-accent(href=`#${id}` ).link-modal-js= name
			+btn("modal-call", "modal-call")
			+btn("modal-sms", "modal-sms")
			+btn("modal-invaild", "modal-invaild")
			+btn("add-ardress", "add-ardress")
	+footer()




